# =================================================================
# Environment Configuration Template
# Copy this file to .env and modify values as needed
# =================================================================

# Application Environment
# Possible values: development, production, test
NODE_ENV=development

# Docker Build Target
# Possible values: development, production
DOCKER_TARGET=development

# =================================================================
# Server Configuration
# =================================================================

# Server listening port
PORT=3000

# Server host binding (0.0.0.0 for Docker, localhost for local dev)
HOST=0.0.0.0

# =================================================================
# Application Configuration
# =================================================================

# Application name displayed in responses
APP_NAME=Node Docker App

# Application version
APP_VERSION=1.0.0

# =================================================================
# Development Configuration
# =================================================================

# Debug namespace for development logging
DEBUG=app:*
LOG_LEVEL=info

# =================================================================
# Docker Configuration
# =================================================================

# Docker Compose project name (prevents conflicts)
COMPOSE_PROJECT_NAME=node_docker

# =================================================================
# Database Configuration (uncomment when needed)
# =================================================================

# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=myapp
# DB_USER=postgres
# DB_PASSWORD=password

# =================================================================
# API Configuration (uncomment when needed)
# =================================================================

# API_BASE_URL=http://localhost:3000/api
# API_TIMEOUT=5000

# =================================================================
# Security Configuration (add real secrets in production)
# =================================================================

# JWT_SECRET=your-super-secret-jwt-key
# SESSION_SECRET=your-session-secret

# =================================================================
# External Services (uncomment when needed)
# =================================================================

# REDIS_URL=redis://localhost:6379
# MONGODB_URL=mongodb://localhost:27017/myapp
